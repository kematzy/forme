<div class="container">
  <h1><%= @page_title %></h1>

  <%= yield %>

  <br />
  <% if @templ %>
    <h2>Settings</h2>
    <pre>form_attr = <%= form_attr.inspect %>
form_opts = <%= form_opts.inspect %><%= "\nsubform_opts = #{subform_opts.inspect}" if @subform_opts %></pre>

    <% if @css %>
      <style type="text/css"><%= @css %></style>
      <h2>Custom CSS</h2>
      <pre><%= @css %></pre>
    <% end %>

    <h2>Template Code</h2>
    <pre><%=h File.read("views/#{@templ}.erb") %></pre>
  <% end %>
</div>

</body>
